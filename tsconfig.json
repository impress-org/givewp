{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "plugins": [
      {"name": "typescript-plugin-css-modules"}
    ],
    "baseUrl": ".",
    "paths": {
      "@givewp/components": ["./src/Views/Components/index.js"],
      "@givewp/components/*": ["./src/Views/Components/*"],
      "@givewp/promotions/*": ["./src/Promotions/sharedResources/*"]
    }
  },
  "include": [
    "./src",
    "./globals.d.ts"
  ]
}
